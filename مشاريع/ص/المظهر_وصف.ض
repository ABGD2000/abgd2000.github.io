	مصفوفة_النص=[]
	مصفوفة_الجواب=[] 
	مصفوفة_الصورة=[] 
	مصفوفة_القائمة=[] 
	مصفوفة_قائمة_الجواب=[] 
	مصفوفة_الزر=[] 
	مصفوفة_الجدول=[] 
	مصفوفة_محتوى=[]
	
دالة init() 
