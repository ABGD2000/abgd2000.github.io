دالة ضع_مخزون المخزون

طول_الأعمدة = طول(المخزون[1])
رأس_البيانات=[]

                setColumnCount(طول_الأعمدة)
		من رأس=1 إلى طول_الأعمدة
			عنصر = أعمل عنصر_جدول(المخزون[1][رأس][1])
		setHorizontalheaderitem(رأس+1, عنصر)
			رأس_البيانات + المخزون[1][رأس][1]	
			
		دور
   بيانات=المخزون
              setrowcount(len(بيانات))
				من رقم_صف=2 إلى len(بيانات)+1
					صف = بيانات[رقم_صف-1]
					من رقم_عمود=2 إلى len(صف)+1
				
					
						 عنصر = أعمل عنصر_جدول(String(صف[رقم_عمود-1][2]))
	           setitem(رقم_صف,رقم_عمود,عنصر)
					دور	
			دور
  
تمام
دالة ضع_بيانات بيانات

حل
  بيانات[1][1][1]
    ضع_مخزون(بيانات)
    
 مرر
 فشل
  شوف "فشل"
 فل

setrowcount(len(بيانات))
				من رقم_صف=2 إلى len(بيانات)+1
					صف = بيانات[رقم_صف-1]
					من رقم_عمود=2 إلى len(صف)+1
						 عنصر = أعمل عنصر_جدول(String(صف[رقم_عمود-1]))
	           setitem(رقم_صف,رقم_عمود,عنصر)
					دور	
			دور
setAlternatingRowColors(True)
تمام

