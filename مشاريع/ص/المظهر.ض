وحدة زر إمتداد pushbutton{

دالة عند_الضغط (فعل)
setclickEvent(فعل)
تمام
دالة جملة_التنفيذ (مصفوفة_العناصر,البيانات,رقم_البيان)

بيان=البيانات[رقم_البيان]
اسم_الدالة= بيان[1] +"("
لو (طول(بيان)<=4)
من رقم_العنصر في بيان[4]

 اسم_الدالة += "'" + ( مصفوفة_العناصر[البيانات[رقم_العنصر][1]].هات_النص() + "'," )
 دور
 تم
 لو(اسم_الدالة[طول(اسم_الدالة)]='(')
  اسم_الدالة += ")"
  لا
  اسم_الدالة[طول(اسم_الدالة)]=")"
  تم

  eval(اسم_الدالة)
تمام
دالة جملة_البحث (قيم_البيانات,العدد)

جملة_البحث =  قيم_البيانات[العدد+5].هات_النص()  +  قيم_البيانات[1+العدد].هات_النص()  +   قيم_البيانات[2+العدد].هات_النص()  +   قيم_البيانات[3+العدد].هات_النص()  
 قيم_البيانات[العدد+5].ضع_نص(جملة_البحث)

تمام
دالة ضع_مظهر  وصف setstylesheet(وصف) تمام
دالة ضع_مؤشر  وصف setCursor(وصف) تمام
دالة هات_النص
مرر text() 
تمام
دالة ضع_نص كلام
settext(كلام)
تمام
دالة ضع_مكان ن1,ن2,ن3,ن4 
setGeometry(ن1,ن2,ن3,ن4)
تمام
دالة أقل_حجم (ط,ع)
	setMinimumWidth(ع)
						setMinimumHeight(ط)
						
تمام
دالة أقصى_حجم (ط,ع)
	setMaximumWidth(ع)
						setMaximumHeight(ط)
						
تمام
}



