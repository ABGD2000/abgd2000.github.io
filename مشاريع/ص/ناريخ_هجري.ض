الشهور_الهجرية = ["محرم","صفر","ربيع الأول","ربيع الآخر","جمادى الأولى","جمادى الآخرة","رجب","شعبان","رمضان","شوال","ذو القعدة","ذو الحجة"]

# -------------------------------------------------------------------------
? التاريخ_الهجري(number( TimeList()[19]), number( TimeList()[10]), number( TimeList()[6]))

# --------------------------------------------------------------------------

	الدالة الصحيح(الرقم)
		    لو الرقم < -0.0000001 
			مرر Ceil(الرقم - 0.0000001)
		    تم

		    مرر floor(الرقم + 0.0000001)

# ----------------------------------------------------------------------------

	الدالة التاريخ_الهجري(العام_الميلادي, الشهر_الميلادي, اليوم_الميلادي)

		        jd1 = الصحيح((1461 * (العام_الميلادي + 4800 + الصحيح((الشهر_الميلادي - 14) / 12.0))) / 4)
		        jd2 = الصحيح((367 * (الشهر_الميلادي - 2 - 12 *  (الصحيح((الشهر_الميلادي - 14) /12.0)))) / 12)
		        jd3 = الصحيح((3 * (الصحيح((العام_الميلادي + 4900 + الصحيح((الشهر_الميلادي - 14) /12.0)) / 100))) / 4)
		        jd = jd1 + jd2 - jd3 + اليوم_الميلادي - 32075
		
		        l = jd - 1948440 + 10632
		        n = الصحيح((l - 1) /10631.0)
		        l = l - 10631 * n + 354
		
		        j1 = (الصحيح((10985 - l) / 5316.0)) * (الصحيح((50 * l) / 17719.0))
		        j2 = (الصحيح(l / 5670.0)) * (الصحيح((43 * l) / 15238.0))
		        j = j1 + j2
		
		        l1 = (الصحيح((30 - j) / 15.0)) * (الصحيح((17719 * j) / 50.0))
		        l2 = (الصحيح(j / 16.0)) * (الصحيح((15238 * j) / 43.0))
		        l = l - l1 - l2 + 29
		

		        الشهر = الصحيح((24 * l) / 709.0)
		        العام = 30 * n + j - 30
		        اليوم = l - الصحيح((709 * الشهر) / 24.0) +1


			? ""  + اليوم +" / " + الشهر + " / " + العام + " "+"هـ"
			
			من س = 1 إلى 12

				لو  الشهر=""+س

					الشهر="" + الشهور_الهجرية[س]
				تم
			دور
			
			? ""  + اليوم +" / " + الشهر + " / " + العام + " "+"هجري"

