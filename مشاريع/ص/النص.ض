كملصوق_ملحق=""
كملحق=""
البداية=""
مصفوفة = []
  ط = 0

 س =1
وحدات=len(نص)
  كلما س<=وحدات

    رقم_الرمز =Ascii(نص[ س])



    لو ((رقم_الرمز & 0xc0) = 0x0)

   
مصفوفة +  (نص[ س])

لو(ط!=0)
كملصوق +=  (نص[ س])

لا
البداية = (نص[ س])
تم

لو (س+1 >= وحدات)
