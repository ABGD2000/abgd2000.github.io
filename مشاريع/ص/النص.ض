دالة حروف(نص) 
مصفوفة = []
  ط = 0

 س =1

  كلما س<=len(نص)

    رقم_الرمز =Ascii(نص[ س])



    لو ((رقم_الرمز & 0xc0) = 0x0)

   
مصفوفة +  (نص[ س])
       س+=1

       ط+=1

     إذا ((رقم_الرمز & 0xe0) = 0xc0) 

مصفوفة + (نص[ س] +نص[ س+1])

       س += 2

       ط+=1

     إذا ((رقم_الرمز & 0xf0) = 0xe0) 

مصفوفة + (نص[ س]  +(نص[ س+1])+(نص[ س+2]))

       س += 3

       ط+=1

     إذا ((رقم_الرمز & 0xf8) = 0xf0) 

  

      مرر -1; // Or throw an exception

    لا 

    


      لو (رقم_الرمز >=  Ascii(' ') ) 

    

       

مصفوفة + نص[ س]           

           س+=1

       ط+=1

       لا 

        

        مرر []

      تم

     

    تم

  لف

