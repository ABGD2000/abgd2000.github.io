دالة بدون_تعريفة_تنوين كلمة

الحروف_القمرية =[ "أ" , "ب" , "غ" ,"ح" , "ج" , "ك" , "و" , "خ" , "ف" , "ع" , "ق" , "م" , "ه"  ]
حروف_كلمة=حروف_كملصوق(كلمة)
طول_كلمة=طول(حروف_كلمة)-4
ح=1
تعريفية=0
تنوين=0



 لو ( حروف_كلمة[طول_كلمة]="ا" )    تنوين=1    del(حروف_كلمة,طول_كلمة)  طول_كلمة--  تم




لو(طول_كلمة > 2 && حروف_كلمة[1]="ا" && حروف_كلمة[2]="ل" )
تعريفية=1
ح=3
إذا (طول_كلمة > 2 && حروف_كلمة[1]="ل" && حروف_كلمة[2]="ل")
تعريفية=1
ح=3
إذا (طول_كلمة > 3 && حروف_كلمة[2]="ا" && حروف_كلمة[3]="ل")
تعريفية=1
ح=4
إذا (طول_كلمة > 4 && حروف_كلمة[3]="ا" && حروف_كلمة[4]="ل")
تعريفية=1

تم

 
لو(!(تعريفية || تنوين))

مرر [حروف_كلمة[:قيم] ,حروف_كلمة[:كملصوق] , حروف_كلمة[:كملحق] , حروف_كلمة[:كملصوق_ملحق] ]
تم

النتائج="" كملصوق="" كملصوق_ملحق="" كملحق=""
 من رقم=ح+1 إلى طول_كلمة-1
 كملصوق_ملحق += حروف_كلمة[رقم]
 دور
كملحق =   حروف_كلمة[ح] + كملصوق_ملحق
كملصوق = كملصوق_ملحق+حروف_كلمة[طول_كلمة]
النتائج = حروف_كلمة[ح]+كملصوق
 مرر [ النتائج , كملصوق , كملحق , كملصوق_ملحق ]
